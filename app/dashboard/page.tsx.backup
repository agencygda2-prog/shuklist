import { createServerClient } from '@/lib/supabase/server';
import Link from 'next/link';
import { ShoppingCart, Store, TrendingDown, Plus } from 'lucide-react';

export default async function DashboardPage() {
  const supabase = createServerClient();
  
  const { data: { user } } = await supabase.auth.getUser();

  // Fetch user's shopping lists count
  const { count: listsCount } = await supabase
    .from('shopping_lists')
    .select('*', { count: 'exact', head: true })
    .eq('user_id', user!.id);

  // Fetch total products in database
  const { count: productsCount } = await supabase
    .from('products')
    .select('*', { count: 'exact', head: true });

  // Fetch total stores
  const { count: storesCount } = await supabase
    .from('stores')
    .select('*', { count: 'exact', head: true });

  // Fetch recent promotions (last 7 days)
  const sevenDaysAgo = new Date();
  sevenDaysAgo.setDate(sevenDaysAgo.getDate() - 7);
  
  const { count: recentPromotions } = await supabase
    .from('prices')
    .select('*', { count: 'exact', head: true })
    .eq('is_promotion', true)
    .gte('created_at', sevenDaysAgo.toISOString());

  return (
    <div>
      {/* Welcome Section */}
      <div className="mb-8">
        <h1 className="text-3xl font-bold text-gray-900 mb-2">
          Welcome back! üëã
        </h1>
        <p className="text-gray-600">
          Ready to save money on your groceries?
        </p>
      </div>

      {/* Quick Stats */}
      <div className="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <StatCard
          href="/dashboard/shopping-lists"
          icon={<ShoppingCart className="w-8 h-8 text-primary" />}
          label="Your Lists"
          value={listsCount || 0}
        />
        <StatCard
          href="/dashboard/stores"
          icon={<Store className="w-8 h-8 text-primary" />}
          label="Stores Tracked"
          value={storesCount || 0}
        />
        <StatCard
          href="/dashboard/products"
          icon={<TrendingDown className="w-8 h-8 text-success" />}
          label="Products"
          value={productsCount || 0}
        />
        <StatCard
          href="/dashboard/products"
          icon={<span className="text-3xl">üè∑Ô∏è</span>}
          label="New Promotions"
          value={recentPromotions || 0}
          subtitle="Last 7 days"
        />
      </div>

      {/* Quick Actions */}
      <div className="card mb-8">
        <h2 className="text-xl font-bold text-gray-900 mb-4">Quick Actions</h2>
        <div className="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          <QuickActionCard
            href="/dashboard/shopping-lists/new"
            icon={<Plus className="w-6 h-6" />}
            title="New Shopping List"
            description="Create a list and compare prices"
          />
          <QuickActionCard
            href="/dashboard/products/add"
            icon={<span className="text-2xl">üì∑</span>}
            title="Scan Product"
            description="Add a product with barcode scanner"
          />
          <QuickActionCard
            href="/dashboard/stores"
            icon={<Store className="w-6 h-6" />}
            title="Browse Stores"
            description="View and manage local stores"
          />
        </div>
      </div>

      {/* Getting Started Guide */}
      {productsCount === 0 && (
        <div className="card bg-primary-light bg-opacity-10 border-2 border-primary-light">
          <h2 className="text-xl font-bold text-gray-900 mb-4">
            üöÄ Getting Started with ShukList
          </h2>
          <div className="space-y-3 text-gray-700">
            <p>
              <strong>Step 1:</strong> Visit your local supermarkets and scan products using your phone camera
            </p>
            <p>
              <strong>Step 2:</strong> Add prices for each product at different stores
            </p>
            <p>
              <strong>Step 3:</strong> Create shopping lists and let ShukList find the best prices
            </p>
            <p>
              <strong>Step 4:</strong> Invite friends and family to contribute prices and share savings!
            </p>
          </div>
          <Link
            href="/dashboard/products/add"
            className="btn-primary inline-block mt-6"
          >
            Start Adding Products
          </Link>
        </div>
      )}
    </div>
  );
}

function StatCard({ 
  href,
  icon, 
  label, 
  value,
  subtitle 
}: { 
  href: string;
  icon: React.ReactNode; 
  label: string; 
  value: number;
  subtitle?: string;
}) {
  return (
    <Link href={href} className="card hover:shadow-md transition-shadow cursor-pointer">
      <div className="flex items-start justify-between">
        <div>
          <p className="text-sm text-gray-600 mb-1">{label}</p>
          <p className="text-3xl font-bold text-gray-900">{value}</p>
          {subtitle && (
            <p className="text-xs text-gray-500 mt-1">{subtitle}</p>
          )}
        </div>
        <div>{icon}</div>
      </div>
    </Link>
  );
}

function QuickActionCard({
  href,
  icon,
  title,
  description,
}: {
  href: string;
  icon: React.ReactNode;
  title: string;
  description: string;
}) {
  return (
    <Link
      href={href}
      className="card hover:shadow-md transition-shadow cursor-pointer group"
    >
      <div className="flex items-start gap-4">
        <div className="p-3 bg-primary bg-opacity-10 rounded-lg group-hover:bg-primary group-hover:text-white transition-colors">
          {icon}
        </div>
        <div>
          <h3 className="font-semibold text-gray-900 mb-1">{title}</h3>
          <p className="text-sm text-gray-600">{description}</p>
        </div>
      </div>
    </Link>
  );
}